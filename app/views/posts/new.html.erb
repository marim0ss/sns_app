<div class="container-fluid center-content">

  <div class="card" style="width: 30rem;">
    <h2 class="card-header text-center">新規投稿</h2>
    <div class="card-body">
      <%= form_for @post, url: "/posts", html: { method: :post } do |f| %>
      <p>
        <%= f.text_area :content, :class => 'form-control' %>
      </p>
      <%= f.submit "投稿" %>
      <% end %>
    </div>
  </div>
</div>
